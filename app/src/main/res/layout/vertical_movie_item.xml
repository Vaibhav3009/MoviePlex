<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginVertical="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/movImg"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        app:layout_constraintStart_toEndOf="@id/movImg"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="155dp"
        android:layout_marginTop="10dp"
        android:text="The Batmanssssssssssssss"
        android:ellipsize="end"
        android:layout_marginEnd="5dp"
        android:textSize="24dp"
        android:textFontWeight="700"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textFontWeight="700"
        android:textSize="24dp"
        android:id="@+id/rating"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toEndOf="@id/movImg"

        android:layout_marginStart="5dp"
        android:text="4.5/10"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_marginStart="155dp"
        android:layout_marginEnd="5dp"
        android:maxLines="5"
        app:layout_constraintStart_toEndOf="@id/movImg"
        app:layout_constraintTop_toBottomOf="@id/rating"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="2dp"
        android:textSize="16dp"
        android:id="@+id/summary"

        android:text="ssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssss"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


